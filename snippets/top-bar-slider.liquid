<link rel="stylesheet" href="{{ 'swiper-8.2.3-bundle.min.css' | asset_url }}">
<style>

  .text-slider-bar-pc{
        display: block;
  }
  .text-slider-bar-mobile{
        display: none;
  }
  .bar-col_1:hover .alert, 
  .bar-col_2:hover .alert, 
  .bar-col_3:hover .alert{
      text-decoration: none;
      color: #00000073;
  }

  .bar-col_1:hover,
  .bar-col_2:hover,
  .bar-col_3:hover{
      text-decoration: none;
  }
  .text-slider-bar-pc .alert {    
      margin-bottom: 0px;
  }

  .swiper {
      width: 100%;
      height: 50px;
  }
  .main-content{
  	  padding-top: 0px;
  }
  
  @media only screen and ( max-width: 425px ){
    .text-slider-bar-pc{
        display: none;
    }
    .text-slider-bar-mobile{
        display: block;
  	}
  }
  
 
</style>



<div class="text-slider-bar-pc" id="text-slider-bar-pc">
  <div class="container-fluid">
    <div class="row">
      {%- for block in section.blocks -%}
      <style>
        {%- if block.settings.slider_sticky_enable != false -%}
        .slider-bar-sticky {
          position: fixed;
          top: {{ block.settings.textslidebar_position }}%;
          width: 100%;
          z-index: 11;
        }
        {%- endif -%}
      </style>
      
      	{%- if block.settings.bar_1_enable -%}
        <div class="col-4 mx-0 my-0 px-0 py-0">
          <a href="#" class="bar-col_1 text-center">
            <div class="alert alert-success border-0 rounded-0" role="alert" style="background: {{ block.settings.bar_1_bg }};color: {{ block.settings.bar_1_content }};">
              <strong>{{ block.settings.normal_text1 | excape }}</strong>  | {{ block.settings.btn_text1 | excape }} 
            </div>
          </a>
        </div>
		{%- endif -%}
        {%- if block.settings.bar_2_enable -%}
        <div class="col-4 mx-0 my-0 px-0 py-0">
          <a href="#" class="bar-col_2 text-center">
            <div class="alert alert-primary border-0 rounded-0" role="alert" style="background: {{ block.settings.bar_2_bg }};color: {{ block.settings.bar_2_content }};">
              <strong>{{ block.settings.normal_text2 | excape }}</strong>  | {{ block.settings.btn_text2 | excape }}
            </div>
          </a>
        </div>
		{%- endif -%}
        {%- if block.settings.bar_3_enable -%}
        <div class="col-4 mx-0 my-0 px-0 py-0">
          <a href="#" class="bar-col_3 text-center">
            <div class="alert alert-info border-0 rounded-0" role="alert" style="background: {{ block.settings.bar_3_bg }};color: {{ block.settings.bar_3_content }};">
              <strong>{{ block.settings.normal_text3 | excape }}</strong>  | {{ block.settings.btn_text3 | excape }}
            </div>
          </a>
        </div>
      	{%- endif -%}
      {%- endfor -%}
    </div> 
  </div>
</div>

<div class="text-slider-bar-mobile" id="text-slider-bar-mobile">
  <div class="container-fluid">
    <div class="row">
        <div class="col-12 m-0 p-0">
            <div class="swiper mySwiper-text-slider">
              <div class="swiper-wrapper">
                {%- for block in section.blocks -%}
                <style>
                  {%- if block.settings.slider_sticky_enable != false -%}
                  @media only screen and ( max-width: 425px ){
                    .slider-bar-sticky-mobile {
                      position: fixed;
                      top: {{ block.settings.textslidebar_position_mobile }}%;
                      width: 100%;
                      z-index: 11;
                    }
                  }
                  {%- endif -%}
                </style>
      			{%- if block.settings.bar_1_enable -%}
                <div class="swiper-slide">
                	<a href="#" class="bar-col_1 text-center">
                    <div class="alert alert-success border-0 rounded-0" role="alert" style="background: {{ block.settings.bar_1_bg }};color: {{ block.settings.bar_1_content }};">
                      <strong>{{ block.settings.normal_text1 | excape }}</strong>  | {{ block.settings.btn_text1 | excape }}
                    </div>
                  </a>
                </div> 
                {%- endif -%}
                {%- if block.settings.bar_2_enable -%}
                 <div class="swiper-slide">
                	 <a href="#" class="bar-col_2 text-center">
                        <div class="alert alert-primary border-0 rounded-0" role="alert" style="background: {{ block.settings.bar_2_bg }};color: {{ block.settings.bar_2_content }};">
                          <strong>{{ block.settings.normal_text2 | excape }}</strong>  | {{ block.settings.btn_text2 | excape }}
                        </div>
                     </a>
                 </div> 
                {%- endif -%}
                {%- if block.settings.bar_3_enable -%}
                 <div class="swiper-slide">
                	 <a href="#" class="bar-col_3 text-center">
                        <div class="alert alert-info border-0 rounded-0" role="alert" style="background: {{ block.settings.bar_3_bg }};color: {{ block.settings.bar_3_content }};">
                          <strong>{{ block.settings.normal_text3 | excape }}</strong>  | {{ block.settings.btn_text3 | excape }} 
                        </div>
                     </a>
                 </div> 
                {%- endif -%}
      			{%- endfor -%}
              </div>
            </div>
        </div>
    </div> 
  </div>
</div>


<script> 
  window.addEventListener('scroll', myFunction3);
  
  var header3 = document.getElementById("text-slider-bar-pc");
  var sticky3 = header3.offsetTop;

  function myFunction3() {
    if (window.pageYOffset > sticky3) {
      header3.classList.add("slider-bar-sticky");
    } else {
      header3.classList.remove("slider-bar-sticky");
    }
  }
</script>

<script> 
  window.addEventListener('scroll', myFunction4);
  
  var header4 = document.getElementById("text-slider-bar-mobile");
  var sticky4 = header4.offsetTop;

  function myFunction4() {
    if (window.pageYOffset > sticky4) {
      header4.classList.add("slider-bar-sticky-mobile");
    } else {
      header4.classList.remove("slider-bar-sticky-mobile");
    }
  }
</script>
 

<script src="//unpkg.com/swiper/swiper-bundle.min.js"></script>  

<script>
  var swiper = new Swiper(".mySwiper-text-slider", {
    direction: "vertical",
    loop: true,
    autoplay: {
      delay: 2500,
      disableOnInteraction: true,
    },
  });
</script>
  